<html lang="en">
<%- include("./partials/head.ejs") %>


<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Products</h2>
    <table class="table" cellspacing="10" >
    <% if (blogs.length > 0) { %>
     
      <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>VAT</th>
            <th>Shipping Cost</th>
            <th>Total</th>
            <th>Merchant</th>
        </tr>
    </thead>
      <% blogs.forEach(blog => { %>
        <tbody>
          <tr>
            <td><%= blog.product %></td>
            <td><%= blog.description %></td>
            <td><%= blog.price %></td>
            <td><%= blog.VAT %></td>
            <td><%= blog.shipping %></td>
            <td><%= blog.total %></td>
            <td><%= blog.merchant %></td>
          </tr>

        <!-- <h3 class="title"><%= blog.product %></h3>
        <p class="snippet"><%= blog.price %></p> -->
      </tbody>
     </table>
      <% }) %>
    <% } else { %>
      <p>There are no Products to display...</p>
    <% } %>
    

    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>